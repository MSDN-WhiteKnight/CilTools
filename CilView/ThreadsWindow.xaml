<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:CilView.UI.Controls" x:Class="CilView.ThreadsWindow"
        Title="Threads" Height="400" Width="650" WindowStartupLocation="CenterOwner">
    <Grid>
        <ComboBox x:Name="cbThread" HorizontalAlignment="Stretch" Height="25" Margin="10,10,10,10" VerticalAlignment="Top" SelectionChanged="cbThread_SelectionChanged" />

        <Controls:CilBrowser x:Name="cilbrowser" HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch" Margin="0,40,0,0" />

    </Grid>
</Window>

        Title="CIL View" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbMainContent" HorizontalAlignment="Stretch"  Margin="20,75,20,20" TextWrapping="Wrap" Text="..." 
                 VerticalAlignment="Stretch" IsReadOnly="True" />

<Window x:Class="CilView.TextViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextViewWindow" Height="350" Width="500" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="tbContent" HorizontalAlignment="Stretch"  Margin="10,10,10,45" TextWrapping="Wrap" 
                   Text="" VerticalAlignment="Stretch" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <Button x:Name="bClose" Content="Close" HorizontalAlignment="Right" Height="24" Margin="10,10,10,10" 
                VerticalAlignment="Bottom" Width="86" Click="bClose_Click"/>

    </Grid>
</Window>

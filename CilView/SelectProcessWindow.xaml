<Window x:Class="CilView.SelectProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attach to process" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="lbProcesses" HorizontalAlignment="Stretch" Margin="10,10,10,45" VerticalAlignment="Stretch" 
                 DisplayMemberPath="ProcessName"/>
        <CheckBox x:Name="chbActiveMode" Content="active mode" HorizontalAlignment="Left" Height="17" Margin="10,10,10,12" VerticalAlignment="Bottom" Width="123"/>
        <Button x:Name="bOK" Content="OK" HorizontalAlignment="Left" Height="25" Margin="165,10,10,10" VerticalAlignment="Bottom" Width="80" Click="bOK_Click"/>
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Left" Height="25" Margin="270,10,10,10" VerticalAlignment="Bottom" Width="80" Click="bCancel_Click"/>

    </Grid>
</Window>
